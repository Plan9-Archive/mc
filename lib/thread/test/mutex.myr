use std
use thread

use thrtestutil

const Nherd = 20

var val : uint64 = 0
var done : uint32 = 0
var mtx : thread.mutex

const main = {
	done = 0
	val = 0

	mtx = thread.mkmtx()
	thrtestutil.mkherd(Nherd, incvar)
	while thread.xget(&done) != Nherd
		/* nothing */
	;;
	if val != 1000 * 20
		std.fatal("mutexes are broken, got {}\n", val)
	;;
}

const incvar = {
	for var i = 0; i < 1000; i++
		thread.mtxlock(&mtx)
		val++
		std.put("val: {}\n", val)
		thread.mtxunlock(&mtx)
	;;
	thread.xadd(&done, 1)
}
